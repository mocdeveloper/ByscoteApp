<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                app:cardBackgroundColor="#fff2f2"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/ic_pay_online_black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="ဖုန္းေဘလ္ျဖင့္"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/ic_telenor_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="telenor"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="ေပးသြင္းမႈအတည္ျပဳရန္
\nသင့္ဖုန္းနံပါတ္ကို ရိုက္ထည့္ပါ။

\n\nအကန္႔အသတ္မရွိၾကည့္ဖို႔
\nအပတ္စဥ္(၃၀၀)က်ပ္ ေကာက္ခံပါမည္။"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="right"
                    android:padding="8dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="16dp"
                        android:hint=" - - - - - - - "
                        android:textColor="#acabab"
                        android:textSize="13dp" />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#34f126"
                    android:text="ဝင္ပါ" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ေငြသြင္းရန္လမ္းညႊန္ခ်က္မ်ား"
                android:textColor="#ffffff"
                android:layout_marginTop="16dp"
                android:textSize="15dp" />

            <View
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="#ffffff"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>