<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/general_background"
    tools:context="com.moc.byscote.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="310dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/login_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="-30dp"
                        android:cropToPadding="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/big_logo_text" />

                    <TextView
                        android:id="@+id/login_app_description_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/small_text_gap"
                        android:text="ရုပ္ရွင္ ၾကည့္မယ္"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/app_description_size" />
                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/general_background"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">

                <LinearLayout style="@style/Login_AppFeature_Item">

                    <ImageView
                        style="@style/BulletPoint"
                        android:src="@drawable/bulletpoint_2" />

                    <TextView
                        style="@style/Login_AppFeature_Text"
                        android:text="@string/login_info_3" />
                </LinearLayout>

                <LinearLayout style="@style/Login_AppFeature_Item">

                    <ImageView
                        style="@style/BulletPoint"
                        android:src="@drawable/bulletpoint_3" />

                    <TextView
                        style="@style/Login_AppFeature_Text"
                        android:text="@string/login_info_4" />
                </LinearLayout>

                <LinearLayout style="@style/Login_AppFeature_Item">

                    <ImageView
                        style="@style/BulletPoint"
                        android:src="@drawable/bulletpoint_4" />

                    <TextView
                        style="@style/Login_AppFeature_Text"
                        android:text="@string/login_info_5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_btn_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/loginbtn_height"
                    android:layout_margin="@dimen/loginbtn_margin"
                    android:background="@drawable/button_background"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/login_txt_fb_icon"
                        android:layout_width="@dimen/loginbtn_height"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/fa_facebook"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/loginbtn_icon_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/general_margin"
                        android:text="@string/login_with_facebook"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/loginbtn_text_size" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/login_txt_tnc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:text="@string/tnc"
            android:textColor="@color/tnc_color" />
    </RelativeLayout>

    <WebView
        android:id="@+id/login_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></WebView>
</FrameLayout>
