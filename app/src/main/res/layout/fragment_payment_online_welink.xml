<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#212121"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7a55eb"
                android:paddingTop="12dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:padding="4dp"
                    android:src="@drawable/big_logo_text" />

                <ImageView
                    android:id="@+id/img_left_menu"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_menu_black" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:elevation="2dp"
                app:cardBackgroundColor="#fff2f2"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="WeLink"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/ic_welink_logo"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="(၁)လအခမဲ့ ရယူရန္
\nWeLink ID ရိုက္ထည္႔ပါ။"
                android:layout_margin="28dp"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="right"
                    android:padding="8dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="16dp"
                        android:hint=" - - - - - - - "
                        android:textColor="#acabab"
                        android:textSize="13dp" />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#34f126"
                    android:text="ဝင္ပါ" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="အခမဲ့ကာလအၿပီး လစဥ္ေၾကး (၁၀၀၀)က်ပ္။
\nအခ်ိန္မေရြးပယ္ဖ်က္ႏိုင္ပါသည္။"
                android:textColor="#ffffff"
                android:layout_marginTop="38dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ေငြသြင္းရန္လမ္းညႊန္ခ်က္မ်ား"
                android:textColor="#ffffff"
                android:layout_marginTop="16dp"
                android:textSize="15dp" />

            <View
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="#ffffff"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>